
<%- include('header') -%>
<%- include('navbar') -%>

<div class="container">
    <h2>Foglaltság szerkesztése</h2>
    <%- include('errorbox') %>
    <form class="form-horizontal"   method="POST">
        <div class="form-group">
            <label class="control-label col-sm-2" for="user">Felhasználó:</label>
            <div class="col-sm-3">
                <!--
                <input type="text" class="form-control" id="user" placeholder="Felhasználó" name="user">-->
                <select name="member" id="member" required>
                    <option value="">--Válassz egyet--</option>
                    <% member.forEach(function(member){ %>
                    <option value="<%=member.name%>"><%=member.name%></option>
                    <% }); %>

                </select>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="place">Helyszín:</label>
            <div class="col-sm-3">
                <!--<input type="text" class="form-control" id="place" placeholder="Helyszín" name="place">-->

                <select name="place" id="place" required>
                    <option value="">--Válassz egyet--</option>
                    <% doorandkey.forEach(function(doorandkey){ %>
                    <option value="<%=doorandkey.place%>"><%=doorandkey.place%></option>
                    <% }); %>

                </select>

            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="start">Időtartam kezdete:</label>
            <div class="col-sm-3">
                <input type="time" class="form-control" id="timestart" placeholder="Időtartam kezdete" name="timestart">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="stop">Időtartam vége:</label>
            <div class="col-sm-3">
                <input type="time" class="form-control" id="timestop" placeholder="Időtartam vége" name="timestop">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="event">Esemény:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="event" placeholder="Esemény" name="event">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-3">
                <input type="submit" class="btn" value="Küldés" >
                <input type="button" class="btn" value="Mégsem" onclick="location.href = '/logined/timelock';">
            </div>
        </div>
    </form>

</div>

<%- include('footer') -%>


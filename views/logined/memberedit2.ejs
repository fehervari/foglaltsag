
<%- include('header') -%>
<%- include('navbar') -%>

<div class="container">
    <h2>Felhasználók szerkesztése</h2>
    <form class="form-horizontal"  method="POST">
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Név:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="name" placeholder="Név" name="name" value="<%= member.name %>">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="phonenumber">Telefonszám:</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="phone" placeholder="Telefonszám" name="phone" value="<%= member.phone %>" >
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email cím:</label>
            <div class="col-sm-3">
                <input type="email" class="form-control" id="email" placeholder="Email cím" name="email" value="<%= member.email %>" >
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-3">
                <input type="submit" class="btn" value="Küldés" onclick="location.href = '/logined/member';">
                <input type="button" class="btn" value="Mégsem" onclick="location.href = '/logined/member';">
            </div>
        </div>
    </form>
</div>


<%- include('footer') -%>


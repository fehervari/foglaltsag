
<%- include('header') -%>
<%- include('navbar') -%>

<div class="container">
    <h2>Felhasználók és kulcsaik</h2>
    <p>Melyik felhasználónak hova van kulcsa:</p>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Felhasználó</th>
            <th>Ajtókulcs</th>
            <th></th>
        </tr>
        </thead>
        <tbody>


        <% userandkey.forEach(function(userandkey){ %>
        <tr>
            <td><%=userandkey.user%></td>
            <td><%=userandkey.door%></td>
            <td><button type="button" class="btn" onclick="location.href='/logins/usersandkeys/del?id=<%=userandkey._id%>';" >Törlés</button></td>
            <% }); %>
        </tr>
        </tbody>
    </table>
    <input type="button" class="btn" value="Új felvétele" onclick="location.href = '/logins/usersandkeys/add';">

</div>

<%- include('footer') -%>

